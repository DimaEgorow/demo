<Page x:Class="WpfApp6.pages.CalculateCountProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Калькулятор материала">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Выберите тип продукции:" />
            <ComboBox x:Name="TypeProductComboBox" Width="200"   />

            <TextBlock Text="Введите количество продукции:" Margin="0,10,0,0" />
            <TextBox x:Name="QuantityTextBox" Width="200" />

            <TextBlock Text="Выберите тип материала:" Margin="0,10,0,0" />
            <ComboBox x:Name="TypeMaterialComboBox" Width="200" />

            <TextBlock Text="Параметр 1(длина):" Margin="0,10,0,0" />
            <TextBox x:Name="Parameter1TextBox" Width="200" />

            <TextBlock Text="Параметр 2(ширина):" Margin="0,10,0,0" />
            <TextBox x:Name="Parameter2TextBox" Width="200" />

            <Button Content="Рассчитать" Margin="0,20,0,0" Width="100" Click="CalculateButton_Click" />
            <TextBlock x:Name="ResultTextBlock" Margin="0,20,0,0" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Page>
